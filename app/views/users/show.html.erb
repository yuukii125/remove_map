<div class="user_show">
  <div class="card">
    <h2 class="card-body">
      <% if @user.image? %>
        <%= image_tag @user.image.url, size: '100' %>
      <% else %>
        <%= image_tag "/assets/default.jpg", size: '100' %>
      <% end %>
      <%= @user.name %>
    </h2>
  </div>
  <% if @user.id == current_user.id %>
    <%= link_to "編集する", edit_user_registration_path, class: "btn btn-primary" %>
  <% end %>
</div>