<div class="container mt-5">
  <div class="salon_name">
    <h4><%= @salon.name %></h4>
    <%# <%= @salon.reviews.rate %>
  </div>
  <div class="salon_info card">
    <h5>基本情報</h5>
    <div class="border-bottom"></div>
    <h6 class="card-body">住所</h6>
      <%= @salon.address %>
      <div class="border-bottom"></div>
    <h6 class="card-body">アクセス</h6>
      <%= @salon.access %>
      <div class="border-bottom"></div>
    <h6 class="card-body">営業時間</h6>
      <%= @salon.bussiness_hours %>
      <div class="border-bottom"></div>
    <h6 class="card-body">電話番号</h6>
      <%= @salon.phone_number %>
      <div class="border-bottom"></div>
    <h6 class="card-body">施術箇所</h6>
      <%= @salon.treatment_areas %>
      <div class="border-bottom"></div>
    <h6 class="card-body">料金</h6>
      <%= @salon.fear %>
      <div class="border-bottom"></div>
    <h6 class="card-body">HP</h6>
      <% if @salon.url.present? %>
        <%= link_to @salon.url, @salon.url, target: :_blank %>
      <% end %>
  </div>
  <div class="salon_map">
    <h5>場所</h5>
  </div>
  <div class="salon_review">
    <h5>口コミ</h5>
    <%# <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#reviewModalCentered">
    口コミを投稿する
    </button> %>
    <%= link_to "口コミを投稿する", new_salon_review_path(@salon), class: "btn btn-primary" %>
    <% if @comments.present? %>
      <% @comments.each do |comment| %>
        <div class="card">
          <div class="card-body d-flex justify-content-start">
            <div class="review_icon">
              <% if comment.user.image? %>
                <%= image_tag comment.user.image.url, size: '50' %>
              <% else %>
                <%= image_tag "/assets/default.jpg", size: '50' %>
              <% end %>
            </div>
            <div class="d-flex flex-column align-items-start ml-3">
              <div class="review_name">
                <%= link_to "#{comment.user.name}", user_path(comment.user_id), class: "text-body" %>
              </div>
              <%= comment.rate %>
              <div class="review_comment text-left">
              <%= comment.comment %>
              </div>
              <div class="review_create text-black-50">
                投稿日時：<%= comment.created_at.strftime("%Y/%m/%d") %>
              </div>
              <% if comment.user_id == current_user.id %>
                <%= link_to "削除", salon_review_path(comment.salon_id,comment.id), method: :delete, data: { confirm: "本当に削除しますか？" }%>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="card">口コミはまだありません</p>
    <% end %>
  </div>
  <div class="salon_photo">
    <h5>写真</h5>
  </div>
  <%= link_to "編集", edit_salon_path, class: "btn btn-primary text-white" %>
</div>